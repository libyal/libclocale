#!/usr/bin/make -f
# debian/rules that uses debhelper >= 7.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS


%:
	dh  $@

install_libclocale:
	# Set up libclocale package directories and files
	mkdir -p debian/libclocale/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so.*.*.* debian/libclocale/usr/lib

install_libclocale_dev:
	# Set up libclocale-dev package directories and files
	mkdir -p debian/libclocale-dev/usr/include
	mkdir -p debian/libclocale-dev/usr/include/libclocale
	mkdir -p debian/libclocale-dev/usr/lib
	mkdir -p debian/libclocale-dev/usr/lib/pkgconfig
	mkdir -p debian/libclocale-dev/usr/share/man/man3
	install -p -m755 debian/tmp/usr/include/*.h debian/libclocale-dev/usr/include
	install -p -m755 debian/tmp/usr/include/libclocale/*.h debian/libclocale-dev/usr/include/libclocale
	install -p -m755 debian/tmp/usr/lib/*.la debian/libclocale-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.a debian/libclocale-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so debian/libclocale-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/pkgconfig/* debian/libclocale-dev/usr/lib/pkgconfig
	install -p -m755 debian/tmp/usr/share/man/man3/* debian/libclocale-dev/usr/share/man/man3

override_dh_auto_test:

override_dh_installinit: install_libclocale install_libclocale_dev

override_dh_installmenu:

override_dh_installmime:

override_dh_installmodules:

override_dh_installlogcheck:

override_dh_installlogrotate:

override_dh_installpam:

override_dh_installppp:

override_dh_installudev:

override_dh_installwm:

override_dh_installxfonts:

override_dh_gconf:

override_dh_icons:

override_dh_perl:

override_dh_pysupport:

override_dh_shlibdeps:
	dh_shlibdeps -Llibclocale -l${PWD}/debian/tmp/usr/lib

override_dh_makeshlibs:
	dh_makeshlibs -Xlibclocale-dev

