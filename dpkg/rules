#!/usr/bin/make -f
# debian/rules that uses debhelper >= 7.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS


%:
	dh  $@

install_libcnotify:
	# Set up libcnotify package directories and files
	mkdir -p debian/libcnotify/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so.*.*.* debian/libcnotify/usr/lib

install_libcnotify_dev:
	# Set up libcnotify-dev package directories and files
	mkdir -p debian/libcnotify-dev/usr/include
	mkdir -p debian/libcnotify-dev/usr/include/libcnotify
	mkdir -p debian/libcnotify-dev/usr/lib
	mkdir -p debian/libcnotify-dev/usr/lib/pkgconfig
	mkdir -p debian/libcnotify-dev/usr/share/man/man3
	install -p -m755 debian/tmp/usr/include/*.h debian/libcnotify-dev/usr/include
	install -p -m755 debian/tmp/usr/include/libcnotify/*.h debian/libcnotify-dev/usr/include/libcnotify
	install -p -m755 debian/tmp/usr/lib/*.la debian/libcnotify-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.a debian/libcnotify-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so debian/libcnotify-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/pkgconfig/* debian/libcnotify-dev/usr/lib/pkgconfig
	install -p -m755 debian/tmp/usr/share/man/man3/* debian/libcnotify-dev/usr/share/man/man3

override_dh_auto_test:

override_dh_installinit: install_libcnotify install_libcnotify_dev

override_dh_installmenu:

override_dh_installmime:

override_dh_installmodules:

override_dh_installlogcheck:

override_dh_installlogrotate:

override_dh_installpam:

override_dh_installppp:

override_dh_installudev:

override_dh_installwm:

override_dh_installxfonts:

override_dh_gconf:

override_dh_icons:

override_dh_perl:

override_dh_shlibdeps:
	dh_shlibdeps -Llibcnotify -l${PWD}/debian/tmp/usr/lib

override_dh_makeshlibs:
	dh_makeshlibs -Xlibcnotify-dev

